    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- INTERACTIVE GAME LOGIC ---
            const gameScenarios = [
                { clue: "You touch a hot stove by accident and pull your hand away. Ouch!", correct: "Conduction" },
                { clue: "Hot air from a heater warms up an entire room.", correct: "Convection" },
                { clue: "Getting a sunburn at the beach.", correct: "Radiation" },
                { clue: "An iron makes a shirt smooth by pressing against it.", correct: "Conduction" },
                { clue: "A hot air balloon rises into the sky.", correct: "Convection" },
                { clue: "Warming your hands over a fire without touching it.", correct: "Radiation" }
            ];
            const allOptions = ["Conduction", "Convection", "Radiation"];
            let currentGameIndex = 0;

            const scenarioText = document.getElementById('game-scenario-text');
            const gameOptionsContainer = document.getElementById('game-options');
            const gameFeedback = document.getElementById('game-feedback');
            const nextBtn = document.getElementById('next-question-btn');
            
            function loadGameScenario(index) {
                const scenario = gameScenarios[index];
                scenarioText.textContent = scenario.clue;
                gameOptionsContainer.innerHTML = '';
                gameFeedback.textContent = '';
                nextBtn.classList.add('hidden');

                allOptions.forEach(optionText => {
                    const button = document.createElement('button');
                    button.textContent = optionText;
                    button.className = "game-option p-4 text-lg border-2 border-gray-300 rounded-lg hover:bg-gray-100 transition";
                    button.onclick = () => checkGameAnswer(optionText, scenario.correct);
                    gameOptionsContainer.appendChild(button);
                });
            }

            function checkGameAnswer(selected, correct) {
                const buttons = gameOptionsContainer.querySelectorAll('.game-option');
                
                buttons.forEach(button => {
                    if (button.textContent === selected) {
                        if (selected === correct) {
                            button.classList.add('correct');
                            gameFeedback.textContent = "Exactly! You solved the case!";
                            gameFeedback.className = "h-6 mb-4 text-lg font-semibold text-green-600";
                        } else {
                            button.classList.add('incorrect');
                            gameFeedback.textContent = "Not quite! Think about how the heat is traveling.";
                            gameFeedback.className = "h-6 mb-4 text-lg font-semibold text-red-600";
                        }
                    }
                    if (button.textContent === correct) {
                         button.classList.add('correct');
                    }
                    button.disabled = true;
                });
                
                nextBtn.classList.remove('hidden');
            }
            
            nextBtn.addEventListener('click', () => {
                currentGameIndex++;
                if (currentGameIndex >= gameScenarios.length) {
                    currentGameIndex = 0; // Loop back to the start
                }
                loadGameScenario(currentGameIndex);
            });


            // --- QUIZ LOGIC ---
            const quizOptions = document.querySelectorAll('.quiz-option');
            const quizResult = document.getElementById('quiz-result');
            const correctAnswers = { 1: 'b', 2: 'c', 3: 'c' };
            let score = 0;
            let questionsAnswered = 0;
            const totalQuestions = Object.keys(correctAnswers).length;

            quizOptions.forEach(option => {
                option.addEventListener('click', () => {
                    const question = option.dataset.question;
                    const answer = option.dataset.answer;
                    
                    const questionButtons = document.querySelectorAll(`.quiz-option[data-question="${question}"]`);
                    if (questionButtons[0].disabled) return;
                    
                    questionsAnswered++;

                    if (answer === correctAnswers[question]) {
                        option.classList.add('correct');
                        score++;
                    } else {
                        option.classList.add('incorrect');
                        document.querySelector(`.quiz-option[data-question="${question}"][data-answer="${correctAnswers[question]}"]`).classList.add('correct');
                    }
                    
                    questionButtons.forEach(btn => btn.disabled = true);
                    
                    if (questionsAnswered === totalQuestions) {
                        quizResult.textContent = `You scored ${score} out of ${totalQuestions}! You're a heat expert!`;
                        quizResult.className = `text-2xl font-bold ${score === totalQuestions ? 'text-green-600' : 'text-red-700'}`;
                    }
                });
            });
            
            // Initial game load
            loadGameScenario(currentGameIndex);
        });
    </script>
